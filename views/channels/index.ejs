<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/views/channels/style.css" >
  <title>Chat app</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

</head>

<body>
  <div class="container">
    <div>
      
    </div>
    <h3 class="mt-5">Join a Room</h3>
    <div>
      <button class='btn block-cube block-cube-hover' type='button' >
        <div class='bg-top'>
          <div class='bg-inner'></div>
        </div>
        <div class='bg-right'>
          <div class='bg-inner'></div>
        </div>
        <div class='bg'>
          <div class='bg-inner'></div>
        </div>
        <div class='text'>
          <a href="/channels/new"  class="link-btn" >Create Room</a>
        </div>
      </button>
    </div>
    <div class=" channel-list">
      <div class="channel-container">
      <% channels.forEach(function(channel) { %>
        <% const parsed_item = JSON.parse(channel.item_content); %>
        <div class='channel-element'>
          <%= parsed_item.content.name || parsed_item.content.body %>
          <button class='btn block-cube block-cube-hover btn-fixed' type='submit' value="Create Channel">
            <div class='bg'>
              <div class='bg-inner'></div>
            </div>
            <div class='text'>
              <% if (parsed_item.content.type == 'private') { %>
                <a href="/channels/<%= channel.item_hash %>/join" class="link-btn" >Request Access</a>
              <% } else { %>
                <a href="/channels/<%= channel.item_hash %>/join"  class="link-btn" >Join</a>
              <% } %>
            </div>
          </button>
          
      </div>
      <% }); %>
    </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>

